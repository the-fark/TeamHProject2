package project2;
public class dime {
	
	public double dimeM() {
		double value;
		
		//Returns a value of 0.10 if the coin lands on heads, or returns a value of 0 if it lands on tails
		if (coin.flip()) {
			value = 0.1;
		}else {
			value = 0;
		}
		return value;
	}

}
